        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Client" />

    <RatingBar
        android:id="@+id/ratingBarServiceClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Livraison" />

    <RatingBar
        android:id="@+id/ratingBarLivraison"
        android:layout_width="wrap_content"
